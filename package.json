{
  "name": "stm-v2",
  "version": "2.0.0",
  "description": "STM v2 - Frontend build system",
  "private": true,
  "scripts": {
    "dev": "tailwindcss -i ./resources/css/app.css -o ./public/assets/css/app.css --watch",
    "build": "tailwindcss -i ./resources/css/app.css -o ./public/assets/css/app.css --minify",
    "admin": "tailwindcss -i ./resources/css/admin.css -o ./public/assets/css/admin.css --minify"
  },
  "keywords": [
    "tailwindcss",
    "htmx",
    "alpine.js",
    "chart.js"
  ],
  "author": "Fabian Hardy",
  "license": "UNLICENSED",
  "devDependencies": {
    "@prettier/plugin-php": "^0.24.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "chart.js": "^4.4.1",
    "htmx.org": "^1.9.10"
  },
  "main": "tailwind.config.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FabianHardy/stm-v2.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/FabianHardy/stm-v2/issues"
  },
  "homepage": "https://github.com/FabianHardy/stm-v2#readme"
