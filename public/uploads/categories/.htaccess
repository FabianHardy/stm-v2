# ================================================
# SÉCURITÉ DOSSIER UPLOADS CATÉGORIES
# ================================================
# Fichier : /public/uploads/categories/.htaccess
# Date : 11/11/2025
# But : Bloquer l'exécution de scripts PHP dans le dossier uploads
# ================================================

# Bloquer l'accès direct aux scripts PHP
<FilesMatch "\.(php|php3|php4|php5|phtml)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Autoriser uniquement les images
<FilesMatch "\.(jpg|jpeg|png|gif|svg|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Désactiver l'exécution de PHP
php_flag engine off

# Désactiver l'indexation du répertoire
Options -Indexes

# Empêcher l'upload de fichiers .htaccess malveillants
<Files ".ht*">
    Order allow,deny
    Deny from all
</Files>