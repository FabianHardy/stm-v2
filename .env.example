# ============================================
# STM v2 - Configuration Environnement
# Copier ce fichier en .env et remplir les valeurs
# ============================================

# --- ENVIRONNEMENT ---
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/stm-v2

# --- BASE DE DONNÉES ---
DB_HOST=localhost
DB_PORT=3306
DB_NAME=stm_v2
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# --- EMAIL ---
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@trendyfoods.be
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@trendyfoods.be
MAIL_FROM_NAME="Trendy Foods"

# --- SÉCURITÉ ---
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=lax

# --- FICHIERS ---
UPLOAD_MAX_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
STORAGE_PATH=../storage

# --- PAGINATION ---
ITEMS_PER_PAGE=20

# --- PAYS SUPPORTÉS ---
SUPPORTED_COUNTRIES=be,lu
DEFAULT_COUNTRY=be

# --- LANGUES SUPPORTÉES ---
SUPPORTED_LANGUAGES=fr,nl
DEFAULT_LANGUAGE=fr

# --- LOGS ---
LOG_LEVEL=debug
LOG_FILE=../storage/logs/app.log

# --- CACHE ---
CACHE_ENABLED=false
CACHE_DRIVER=file
CACHE_TTL=3600
