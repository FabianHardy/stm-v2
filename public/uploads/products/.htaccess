# Bloquer l'exécution de PHP
<FilesMatch "\.(php|php3|php4|php5|phtml)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Autoriser seulement les images
<FilesMatch "\.(jpg|jpeg|png|webp|svg)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Désactiver l'affichage du listing
Options -Indexes
